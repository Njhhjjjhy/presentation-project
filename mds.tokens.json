{
  "font": {
    "headline": {
      "family": ["REM", "system-ui", "sans-serif"],
      "weight": {
        "regular": 400,
        "medium": 500,
        "semibold": 600,
        "bold": 700
      }
    },
    "label": {
      "family": ["REM", "system-ui", "sans-serif"],
      "weight": {
        "regular": 400,
        "medium": 500,
        "semibold": 600
      }
    },
    "body": {
      "family": ["Noto Sans JP", "Inter", "system-ui", "sans-serif"],
      "weight": {
        "regular": 400,
        "medium": 500,
        "semibold": 600
      }
    },
    "logo": {
      "family": ["MohaLogo", "REM", "system-ui", "sans-serif"]
    }
  },
  "effect": {
    "floatingchevron": {
      "offsetY": 1,
      "radius": 2,
      "color": "rgba(64, 68, 76, 0.25)"
    },
    "shadow": {
      "sm": "0 1px 2px rgba(64, 68, 76, 0.1)",
      "md": "0 4px 6px rgba(64, 68, 76, 0.1)",
      "lg": "0 10px 15px rgba(64, 68, 76, 0.1)",
      "xl": "0 20px 25px rgba(64, 68, 76, 0.1)"
    }
  },
  "grid": {
    "container": {
      "maxWidth": "1280px",
      "padding": {
        "mobile": "16px",
        "tablet": "32px",
        "desktop": "48px"
      }
    },
    "gutter": {
      "mobile": "16px",
      "tablet": "24px",
      "desktop": "32px"
    }
  },
  "borderRadius": {
    "sm": "6px",
    "md": "8px",
    "lg": "12px",
    "xl": "16px"
  }
}
